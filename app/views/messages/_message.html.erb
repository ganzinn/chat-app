<li>
  <div class="name_date_wrapper">
    <span class="chat_name" ><%= message.user.name %></span>
    <span class="chat_date"><%= l message.created_at %></span>
  </div>
  <div class="message"><%= message.content %></div>
  <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
</li>
